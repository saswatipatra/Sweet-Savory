@{
  Layout = "_Layout";
}

@using SweetSavory.Models;
@model List<SweetSavory.Models.Flavor>;

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No Flavors have been added yet!</h3>
} 


<ul>
  @foreach (Flavor flavor in Model)
{
  <li>@Html.ActionLink($"{flavor.FlavorType}", "Details", new { id = flavor.FlavorId})</li>
}
</ul>


<p>@Html.ActionLink("Add new Flavor", "Create")</p>
<p>@Html.ActionLink("Add new Treat", "Create", "Treats")</p>
<p>@Html.ActionLink("Show all items", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
