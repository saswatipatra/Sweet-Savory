

@{
  Layout = "_Layout";
}

@model SweetSavory.Models.Flavor

<h2>Flavor Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.FlavorType): @Html.DisplayFor(model => model.FlavorType)</h3>
<hr>
<h4>Treats That Are @Model.FlavorType: </h4>
@if (Model.Treats.Any())
{
    <ul>
        @foreach (var join in Model.Treats)
        {
            <li>@Html.ActionLink($"{@join.Treat.TreatType} - ${@join.Treat.Description}- ${@join.Treat.DeliveryDate}", "Details", "Treats", new { id = join.Treat.TreatId })</li>
        }
    </ul>
}
else
{
    <p>No treats in this flavor yet!</p>
}

<hr>
<p>@Html.ActionLink("Back to list", "Index")</p>

<p>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</p>

